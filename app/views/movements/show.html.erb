<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @movement %>

    <%= render(ButtonComponent.new(url: edit_movement_path(@movement))) { 'Edit this movement' } %>
    <div class="inline-block ml-2">
      <%= render(ButtonComponent.new(url: movement_path(@movement), method: :delete)) { 'Destroy this movement' } %>
    </div>
    <%= render(ButtonComponent.new(url: movements_path)) { 'Back to movements' } %>
  </div>
</div>
